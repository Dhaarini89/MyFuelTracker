<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer stroke to create a border around the EditText -->
    <stroke
        android:width="1dp"
        android:color="#FFFF00" />

    <!-- Inner padding to create some space between the EditText text and the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Background color to fill the EditText shape -->
    <solid android:color="#FFFF00" />

    <!-- Rounded corners to create a rectangular EditText shape -->
    <corners
        android:radius="4dp" />

</shape>
